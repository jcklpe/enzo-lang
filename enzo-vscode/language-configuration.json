{
  // ===== Comments =====
  "comments": {
    // single-line comments
    "lineComment": "//",
    // block comments using /' ... '/
    "blockComment": ["/'", "'/"]
  },

  // ===== Brackets =====
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["<", ">"]
  ],

  // ===== Auto-closing pairs =====
  // when you type the open character, VS Code will auto-insert the close
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "'",  "close": "'",  "notIn": ["string", "comment"] },
    { "open": "<", "close": ">", "notIn": ["string"] }
  ],

  // ===== Surrounding pairs =====
  // when you select text and type one of these opens, it surrounds the selection
  "surroundingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" },
    { "open": "<", "close": ">" }
  ],

  // ===== Word pattern =====
  // defines what constitutes a "word" for word-based operations
  "wordPattern": "\\$?[a-zA-Z_\\-][a-zA-Z0-9_\\-]*",

  // ===== Indentation rules =====
  "indentationRules": {
    "increaseIndentPattern": "^.*(\\{|\\(|\\[)\\s*$",
    "decreaseIndentPattern": "^\\s*(\\}|\\)|\\])"
  }
}
