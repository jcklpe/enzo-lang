{
  // ===== Comments =====
  "comments": {
    // single-line comments
    "lineComment": "//",
    // block comments using /' ... '/
    "blockComment": ["/'", "'/"]
  },

  // ===== Brackets =====
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],

  // ===== Auto-closing pairs =====
  // when you type the open character, VS Code will auto-insert the close
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "'",  "close": "'",  "notIn": ["string", "comment"] }
  ],

